    <Recipe>
        <Title>Spaghetti Carbonara</Title>
        <Ingredients>
            <Ingredient>
                <Name>spaghetti</Name>
                <Quantity unit="g">200</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>egg yolk</Name>
                <Quantity unit="pcs">4</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>pancetta</Name>
                <Quantity unit="g">100</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>parmesan</Name>
                <Quantity unit="g">50</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>black pepper</Name>
                <Quantity unit="g">1</Quantity>
            </Ingredient>
        </Ingredients>
        <Instructions>
            <Step>Boil the spaghetti.</Step>
            <Step>Fry the pancetta in a separate pan.</Step>
            <Step>Mix egg yolks with parmesan.</Step>
            <Step>Combine spaghetti, pancetta, and egg mixture.</Step>
            <Step>Season with black pepper.</Step>
        </Instructions>
        <PreparationTime>10</PreparationTime>
        <CookingTime>15</CookingTime>
        <ServingSize>2</ServingSize>
        <Category>Lunch</Category>
        <Difficulty>Medium</Difficulty>
        <Nutrition calories="700" fat="35" protein="25" carbs="70"/>
        <Image>carbonara.jpg</Image>
    </Recipe>
    
