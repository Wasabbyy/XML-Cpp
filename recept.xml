    <Recipe>
        <Title>Chocolate Cake</Title>
        <Ingredients>
            <Ingredient>
                <Name>flour</Name>
                <Quantity unit="g">250</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>sugar</Name>
                <Quantity unit="g">200</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>cocoa powder</Name>
                <Quantity unit="g">50</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>eggs</Name>
                <Quantity unit="pcs">3</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>butter</Name>
                <Quantity unit="g">100</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>milk</Name>
                <Quantity unit="ml">200</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>baking powder</Name>
                <Quantity unit="g">10</Quantity>
            </Ingredient>
        </Ingredients>
        <Instructions>
            <Step>Preheat oven to 180°C (350°F).</Step>
            <Step>Mix dry ingredients in a bowl.</Step>
            <Step>Whisk eggs, melted butter, and milk in a separate bowl.</Step>
            <Step>Combine wet and dry ingredients until smooth.</Step>
            <Step>Pour into a greased baking pan and bake for 30 minutes.</Step>
        </Instructions>
        <PreparationTime>15</PreparationTime>
        <CookingTime>30</CookingTime>
        <ServingSize>6</ServingSize>
        <Category>Breakfast</Category>
        <Difficulty>Medium</Difficulty>
        <Nutrition calories="400" fat="18" protein="6" carbs="50"/>
        <Image>chocolatecake.jpg</Image>
    </Recipe>
    <Recipe>
        <Title>Pancakes</Title>
        <Ingredients>
            <Ingredient>
                <Name>flour</Name>
                <Quantity unit="g">150</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>milk</Name>
                <Quantity unit="ml">250</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>egg</Name>
                <Quantity unit="pcs">1</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>sugar</Name>
                <Quantity unit="g">20</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>butter</Name>
                <Quantity unit="g">20</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>baking powder</Name>
                <Quantity unit="g">5</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>maple syrup</Name>
                <Quantity unit="ml">50</Quantity>
            </Ingredient>
        </Ingredients>
        <Instructions>
            <Step>Mix flour, sugar, and baking powder in a bowl.</Step>
            <Step>Whisk milk, egg, and melted butter in another bowl.</Step>
            <Step>Combine wet and dry ingredients to form a batter.</Step>
            <Step>Heat a non-stick pan and pour batter to form pancakes.</Step>
            <Step>Cook until golden brown on both sides.</Step>
            <Step>Serve with maple syrup.</Step>
        </Instructions>
        <PreparationTime>10</PreparationTime>
        <CookingTime>10</CookingTime>
        <ServingSize>2</ServingSize>
        <Category>Breakfast</Category>
        <Difficulty>Easy</Difficulty>
        <Nutrition calories="350" fat="12" protein="8" carbs="50"/>
        <Image>pancakes.jpg</Image>
    </Recipe>
    
