    <Recipe>
        <Title>Tomato Soup</Title>
        <Ingredients>
            <Ingredient>
                <Name>tomatoes</Name>
                <Quantity unit="g">500</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>onion</Name>
                <Quantity unit="g">100</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>garlic</Name>
                <Quantity unit="cloves">2</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>vegetable broth</Name>
                <Quantity unit="ml">500</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>olive oil</Name>
                <Quantity unit="ml">10</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>salt</Name>
                <Quantity unit="g">2</Quantity>
            </Ingredient>
            <Ingredient>
                <Name>pepper</Name>
                <Quantity unit="g">1</Quantity>
            </Ingredient>
        </Ingredients>
